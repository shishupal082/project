<%= render '/posts/header' %>
<h1>New Post</h1>
<form action="/posts" method="post">
	<div class="field">
		<div class="label"></div>
		<div class="value"><input id="post_title" name="post[title]" type="text" value="Title"></div>
	</div>
	<div class="field">
		<div class="label"></div>
		<div class="value"><textarea id="post_text" cols="40" name="post[text]" rows="6">Text</textarea></div>
	</div>
	<div class="field">
		<div class="label"></div>
		<div class="value"><input type="submit" value="Submit"></div>
	</div>
</form>